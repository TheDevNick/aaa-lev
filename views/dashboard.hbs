<h6>Dashboard</h6>
<h3>Welcome, {{name}}</h3>
<p>Here are the events you created</p>

{{#if events}}

<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each events}}
            <tr>
                <td><a href="/stories/{{_id}}"></a>{{title}}</td>
                <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td></td>
            </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
    <p>You have not created any events yet.</p>
{{/if}}